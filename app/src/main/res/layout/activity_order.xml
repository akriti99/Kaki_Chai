<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:scrollbars="none">
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    tools:context=".Order">

    <TextView
        android:id="@+id/order_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Cup of Chai"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:fontFamily="@font/work_sans_bold"/>

    <TextView
        android:id="@+id/select_TV"
        android:layout_below="@id/order_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Tea Type"
        android:layout_marginTop="12dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:fontFamily="@font/work_sans_medium"/>

    <LinearLayout
        android:id="@+id/select_LL"
        android:layout_marginTop="20dp"
        android:layout_below="@id/select_TV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentPadding="16dp"
                app:cardBackgroundColor="#FFA631">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Black Tea"
                    android:layout_weight="2"
                    android:fontFamily="@font/work_sans_bold"
                    android:textColor="@color/white"
                    android:textSize="24sp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                app:cardBackgroundColor="@color/white"
                app:contentPadding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="05"
                    android:layout_gravity="center"
                    android:fontFamily="@font/work_sans_bold"
                    android:textColor="@color/white"
                    android:textSize="24sp" />

            </com.google.android.material.card.MaterialCardView>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="12dp"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:src="@drawable/add"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentPadding="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#D70101">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Leamon Tea"
                    android:layout_weight="1.8"
                    android:fontFamily="@font/work_sans_bold"
                    android:textColor="@color/white"
                    android:textSize="24sp" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    app:cardBackgroundColor="@color/white"
                    app:contentPadding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="05"
                        android:layout_gravity="center"
                        android:fontFamily="@font/work_sans_bold"
                        android:textColor="@color/white"
                        android:textSize="24sp" />

                </com.google.android.material.card.MaterialCardView>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="12dp"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1.2"
                    android:src="@drawable/add"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentPadding="16dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#FFB12A">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Coffee"
                    android:layout_weight="2.2"
                    android:fontFamily="@font/work_sans_bold"
                    android:textColor="@color/white"
                    android:textSize="24sp" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    app:cardBackgroundColor="@color/white"
                    app:contentPadding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="05"
                        android:layout_gravity="center"
                        android:fontFamily="@font/work_sans_bold"
                        android:textColor="@color/white"
                        android:textSize="24sp" />

                </com.google.android.material.card.MaterialCardView>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="12dp"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="0.8"
                    android:src="@drawable/add"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <TextView
        android:id="@+id/select_Quantity_TV"
        android:layout_below="@id/select_LL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Tea Type"
        android:layout_marginTop="12dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:fontFamily="@font/work_sans_medium"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/smallQuantity_Card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/select_Quantity_TV"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="#FFA631">

        <TextView
            android:id="@+id/smallQuantity_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Small"
            android:layout_weight="2"
            android:paddingTop="12sp"
            android:paddingBottom="12sp"
            android:paddingHorizontal="48dp"
            android:fontFamily="@font/work_sans_bold"
            android:textColor="@color/white"
            android:textSize="24sp" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/BigQuantity_Card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/select_Quantity_TV"
        android:layout_alignParentRight="true"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="@color/white">

        <TextView
            android:id="@+id/BigQuantity_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Large"
            android:layout_weight="2"
            android:paddingTop="12sp"
            android:paddingBottom="12sp"
            android:paddingHorizontal="48dp"
            android:fontFamily="@font/work_sans_bold"
            android:textColor="@color/black"
            android:textSize="24sp" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/ExtraSugar_Card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/smallQuantity_Card"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Extra Sugar"
            android:layout_weight="2"
            android:paddingTop="12sp"
            android:paddingBottom="12sp"
            android:layout_gravity="center"
            android:paddingHorizontal="48dp"
            android:fontFamily="@font/work_sans_medium"
            android:textColor="@color/black"
            android:textSize="24sp" />

    </com.google.android.material.card.MaterialCardView>

<androidx.appcompat.widget.AppCompatButton
    android:layout_below="@+id/ExtraSugar_Card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    android:text="Confirm Order"
    android:textSize="18sp"
    android:padding="16dp"
    android:fontFamily="@font/work_sans_bold"
    android:layout_alignParentBottom="true"
    android:textColor="@color/white"/>

</RelativeLayout>
</ScrollView>